@model ASPNetCoreInventory.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Authen.cshtml";
}

<main>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="text-center my-4">
                        <img src="~/backend/assets/img/logo-food.png"  width="100"/>
                     </div>
                    <div class="card-body mx-5">

                        @if(ViewBag.Message != null)
                        {
                            @Html.Raw(ViewBag.Message)
                        }

                        <form asp-action="Login" method="post">
                            <div class="form-floating mb-3">
                                <input asp-for="EmailID" class="form-control" id="inputEmail" type="email" placeholder="name@example.com" />
                                <label for="inputEmail">Email address</label>
                                <span asp-validation-for="EmailID" class="text-danger"></span>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control" id="inputPassword" type="password" placeholder="Password" />
                                <label for="inputPassword">Password</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" id="inputRememberPassword" type="checkbox" value="" />
                                <label class="form-check-label" for="inputRememberPassword">Remember Password</label>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-4 mb-3">
                                <a asp-action="Forgotpassword" asp-controller="Backend" class="small">Forgot Password?</a>
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center py-3">
                        <div class="small"><a asp-action="Register" asp-controller="Backend">Need an account? Sign up!</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>


@model IEnumerable<ASPNetCoreInventory.Models.Product>

<div class="mx-3 my-4">
    <h1>รายการสินค้า</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Picture</th>
                <th>Name</th>
                <th>Price</th>
                <th>Unit</th>
                <th>Category</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@Html.DisplayFor(modelItem => item.ProductPicture)" width="50" /></td>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.UnitPrice)</td>
                    <td>@Html.DisplayFor(modelItem => item.UnitInStock)</td>
                    <td>@Html.DisplayFor(modelItem => item.CategoryID)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreatedDate)</td>
                </tr>
            }
        </tbody>
    </table>
</div>